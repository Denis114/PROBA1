            android:layout_below="@+id/editText10"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="Битая" />

        <EditText
            android:id="@+id/editText10"
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/editText9"
